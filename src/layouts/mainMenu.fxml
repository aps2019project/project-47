<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="1080.0" prefWidth="1920.0" spacing="30" styleClass="mainPage"
      stylesheets="@stylesheets/mainMenuStyles.css" xmlns="http://javafx.com/javafx/8.0.172-ea"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.graphical.MainMenuController">
    <ImageView fitHeight="86" fitWidth="400">
        <VBox.margin>
            <Insets left="70" top="100"/>
        </VBox.margin>
        <Image url="/resources/logo.png"/>
    </ImageView>
    <HBox>
        <ImageView fitHeight="60" fitWidth="60">
            <HBox.margin>
                <Insets left="100.0" top="20.0"/>
            </HBox.margin>
            <Image url="/resources/bullet.png"/>
        </ImageView>
        <Label fx:id="playLabel" onMouseClicked="#goToPlayMenu" onMouseEntered="#onMouseEnteredOnPlayLabel"
               onMouseExited="#onMouseExitedFromPlayLabel"
               prefHeight="40.0" prefWidth="170.0" styleClass="menuName" text="PLAY">
        </Label>
    </HBox>
    <HBox>
        <ImageView fitHeight="60" fitWidth="60">
            <HBox.margin>
                <Insets left="100.0" top="20.0"/>
            </HBox.margin>
            <Image url="/resources/bullet.png"/>
        </ImageView>
        <Label fx:id="collectionLabel" onMouseClicked="#goToCollectionMenu" onMouseEntered="#onMouseEnteredOnCollectionLabel"
               onMouseExited="#onMouseExitedFromCollectionLabel"
               prefHeight="40.0" prefWidth="300.0" styleClass="menuName" text="COLLECTION">
        </Label>
    </HBox>
</VBox>
